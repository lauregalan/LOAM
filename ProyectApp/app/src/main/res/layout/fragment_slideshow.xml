<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".ui.tools.SlideshowFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Herramientas Multimedia"
            android:textColor="#0D1B2A"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Controla la cámara y el micrófono"
            android:textColor="#5E6A7B"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTextView" />

        <!-- Card de la Linterna -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFlashlight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitleTextView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iconFlashlight"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/flashlight_icon"
                    android:src="@drawable/ic_flashlight"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#5E6A7B" />

                <TextView
                    android:id="@+id/textFlashlight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/flashlight"
                    android:textColor="#0D1B2A"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/switchFlashlight"
                    app:layout_constraintStart_toEndOf="@id/iconFlashlight"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchFlashlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Grilla de Herramientas Adicionales -->
        <GridLayout
            android:id="@+id/toolGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="2"
            android:useDefaultMargins="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardFlashlight">

            <!-- Widget Medidor de Distancia -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/distanceMeter"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout style="@style/ToolWidgetStyle">
                    <ImageView
                        style="@style/ToolWidgetIconStyle"
                        android:contentDescription="@string/distance_meter_icon"
                        android:src="@drawable/ic_distance_meter" />
                    <TextView
                        style="@style/ToolWidgetTextStyle"
                        android:text="@string/distance_meter" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Widget Grabar Video -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/videoRecorder"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout style="@style/ToolWidgetStyle">
                    <ImageView
                        style="@style/ToolWidgetIconStyle"
                        android:contentDescription="Record Video Icon"
                        android:src="@drawable/ic_videocam" />
                    <TextView
                        style="@style/ToolWidgetTextStyle"
                        android:text="@string/record_video" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Widget Grabar Audio -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/audioRecorder"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout style="@style/ToolWidgetStyle">
                    <ImageView
                        style="@style/ToolWidgetIconStyle"
                        android:contentDescription="Record Audio Icon"
                        android:src="@drawable/ic_mic" />
                    <TextView
                        style="@style/ToolWidgetTextStyle"
                        android:text="@string/record_audio" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

