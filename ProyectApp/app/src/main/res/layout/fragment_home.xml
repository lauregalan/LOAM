<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu Dashboard"
            android:textColor="#0D1B2A"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Acciones rápidas y datos clave"
            android:textColor="#5E6A7B"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTextView" />

        <GridLayout
            android:id="@+id/dashboardGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:columnCount="2"
            android:useDefaultMargins="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitleTextView">

            <!-- Widget del Dólar (Ocupa 2 columnas) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewUSD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_dollar_card"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/labelDolar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usd_exchange_rate"
                        android:textColor="#FFFFFF"
                        android:alpha="0.9"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/precioDolar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/labelDolar"
                        tools:text="$1,025.50" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_dollar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#FFFFFF"
                        android:alpha="0.3"
                        android:contentDescription="Icono de Dólar"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Widget Chat -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_chat_bubble"
                        app:tint="#4A90E2"
                        android:contentDescription="Icono de Chat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Chat"
                        android:textColor="#0D1B2A"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Widget Mapa (Gallery) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_map"
                        app:tint="#5E6A7B"
                        android:contentDescription="Icono de Mapa"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Mapa"
                        android:textColor="#0D1B2A"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Widget Cámara y Micrófono (Slideshow) - REINTEGRADO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSlideshow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_camera_mic"
                        app:tint="#5E6A7B"
                        android:contentDescription="Icono de cámara y micrófono"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Funciones Multimedia"
                        android:textColor="#0D1B2A"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#B0B8C1"
                        android:contentDescription="Flecha"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- Card de Precios de Referencia (AÑADIDA) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewReferencePrices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dashboardGrid">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precios de Referencia"
                    android:textColor="#0D1B2A"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#EAEAEA" />

                <!-- Precio 1: Construcción m² -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Construcción por m²" android:textColor="#5E6A7B" />
                    <TextView android:id="@+id/textPriceConstruction" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="$1,250.00" android:textColor="#0D1B2A" android:textStyle="bold" />
                </LinearLayout>

                <!-- Precio 2: Honorarios por Hora -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Honorarios por Hora" android:textColor="#5E6A7B" />
                    <TextView android:id="@+id/textPriceFees" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="$85.00" android:textColor="#0D1B2A" android:textStyle="bold" />
                </LinearLayout>

                <!-- Precio 3: Cálculo Estructural -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Cálculo Estructural por m²" android:textColor="#5E6A7B" />
                    <TextView android:id="@+id/textPriceStructural" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="$15.00" android:textColor="#0D1B2A" android:textStyle="bold" />
                </LinearLayout>

                <!-- Precio 4: Dirección de Obra -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Dirección de Obra" android:textColor="#5E6A7B" />
                    <TextView android:id="@+id/textPriceManagement" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="12%" android:textColor="#0D1B2A" android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón de Llamada (Ahora se ancla a la nueva tarjeta de precios) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/callEngineeringCouncilButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#007BFF"
            android:paddingVertical="14dp"
            android:text="Contactar al Consejo"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:cornerRadius="16dp"
            app:elevation="8dp"
            app:icon="@drawable/ic_call"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewReferencePrices" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
